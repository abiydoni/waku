      function markAsSaved() {
        hasUnsavedChanges = false;

        const saveBtn = document.getElementById("saveSettingsBtn");

        if (saveBtn) {
          saveBtn.classList.remove(
            "from-blue-500",

            "to-blue-600",

            "hover:from-blue-600",

