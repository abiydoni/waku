          }
        } catch (err) {
          console.error("‚ùå Error in showGroupSelector:", err);
          console.error("‚ùå Error message:", err.message);
          console.error("‚ùå Error stack:", err.stack);

          Swal.fire({
            icon: "error",
            title: "Gagal memuat grup",
            text: `Error: ${err.message}`,
