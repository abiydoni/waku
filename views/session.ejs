      function formatPhoneNumber(p) {
        if (!p) return p;

        if (isGroupId(p) || p.includes("@s.whatsapp.net")) return p;

        let c = p.replace(/[^\d]/g, "");

        if (c.startsWith("08")) c = "62" + c.slice(1);
        else if (c.startsWith("8")) c = "62" + c;

        return c;
      }

      async function copyToClipboard(t) {
        console.log("üìã Copy to clipboard called with:", t);
        console.log("üìã Parameter type:", typeof t);

        try {
          // Validate parameter
          if (!t || typeof t !== "string") {
            throw new Error(`Invalid parameter: ${t}`);
          }

          await navigator.clipboard.writeText(t);
          console.log("üìã Clipboard write successful");
        } catch (err) {
          console.error(
            "üìã Clipboard API failed, using fallback:",
            err.message
          );

          try {
            const textArea = document.createElement("textarea");
            textArea.value = t;
            document.body.appendChild(textArea);
            textArea.select();
            document.execComm&&("copy");
            document.body.removeChild(textArea);
            console.log("üìã Fallback copy successful");
          } catch (fallbackErr) {
            console.error("üìã Fallback copy failed:", fallbackErr.message);
            throw fallbackErr;
          }
        }

        if (window.Swal) {
          Swal.fire({
            toast: true,
            position: "top",
            timer: 1500,
            showConfirmButton: false,
            icon: "success",
            title: "Group ID copied to clipboard!",
          });
        } else {
          alert("Group ID copied to clipboard!");
