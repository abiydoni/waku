      function updateBotTypeDisplay(botType) {
        const botTypeDisplay = document.getElementById("currentBotType");
        if (botTypeDisplay) {
          const typeNames = {
            general: "General",
            customer_service: "Customer Service",
            marketing: "Marketing",
            support: "Support",
          };
          botTypeDisplay.textContent = typeNames[botType] || "General";
